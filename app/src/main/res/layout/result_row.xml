<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/comm_margin"
    app:cardElevation="0.1dp"
    app:cardMaxElevation="1dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/lin_result_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <com.stpl.edurp.utils.FontTextView
            android:id="@+id/textview_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject place holder"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlue"
            android:textStyle="normal" />

        <com.stpl.edurp.utils.FontTextView
            android:id="@+id/textview_result_row_admin_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="pleace holder : 123-34-33 "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorLightBlack" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0.33"
                android:gravity="left"
                android:orientation="vertical">

                <com.stpl.edurp.utils.FontTextView
                    android:id="@+id/textview_result_row_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="left"
                    android:text="@string/subject_semester"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/colorTextHint"
                    android:textStyle="normal" />

                <com.stpl.edurp.utils.FontTextView
                    android:id="@+id/textview_results_sem_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorNaviBlue"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0.33"
                android:gravity="center"
                android:orientation="vertical">

                <com.stpl.edurp.utils.FontTextView
                    android:id="@+id/textview_result_row_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:text="@string/index"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/colorTextHint"
                    android:textStyle="normal" />

                <com.stpl.edurp.utils.FontTextView
                    android:id="@+id/textview_result_row_grade_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorNaviBlue"
                    android:textStyle="normal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0.33"
                android:gravity="right"
                android:orientation="vertical">

                <com.stpl.edurp.utils.FontTextView
                    android:id="@+id/textview_result_row_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="right"
                    android:text="@string/result"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/colorTextHint"
                    android:textStyle="normal" />

                <com.stpl.edurp.utils.FontTextView
                    android:id="@+id/textview_result_row_result_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorSkyBlue"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/rel_view1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorMargin"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_result_row_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/tag_red" />

            <com.stpl.edurp.utils.FontTextView
                android:id="@+id/textview_result_row_tag_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageview_result_row_tag"
                android:text="@string/result"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorLightGray" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
