<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/comm_margin"
    android:layout_marginRight="@dimen/comm_margin"
    android:layout_marginTop="4dp"
    android:background="@color/colorWhite"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp">

    <include layout="@layout/inc_attendance_course_team" />

    <LinearLayout
        android:id="@+id/lin_holder1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <com.stpl.edurp.utils.FontTextView
            android:id="@+id/textview_attendance_row_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Subject"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorDarkblue" />

        <com.stpl.edurp.utils.FontTextView
            android:id="@+id/textview_attendance_row_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="Designation"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorTextHint" />


        <com.stpl.edurp.utils.FontTextView
            android:id="@+id/textview_attendance_row_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Semester Number"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorNaviBlue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone">

            <com.stpl.edurp.utils.FontTextView
                android:id="@+id/textview_attendance_row_lastsync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Sync-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="@color/colorBlack" />


            <com.stpl.edurp.utils.FontTextView
                android:id="@+id/textview_attendance_row_lastsync_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Last Sync"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="@color/colorBlack" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
