
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_focused="true">
    <shape android:shape="rectangle">
        <solid android:color="@color/colorLightParrot" />
        <corners android:radius="16dp" />
        <stroke
            android:width="3dp"
            android:color="@color/colorLightParrot" />
    </shape>
</item>

<item android:state_selected="true">
    <shape android:shape="rectangle">
        <solid android:color="#f16252" />
        <corners android:radius="16dp" />
        <stroke
            android:width="3dp"
            android:color="@color/colorLightParrot"/>
    </shape>
</item>

<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="@color/colorLightParrot" />
        <corners android:radius="16dp" />
    </shape>
</item>

<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/colorLightParrot" />
        <corners android:radius="16dp" />
        <stroke
            android:width="3dp"
            android:color="@color/colorLightParrot" />
    </shape>
</item>

</selector>